#include<stdlib.h>


#include<conio.h>

#include<iostream>
using namespace std;

int main()
{   //Encrypter:
	char input = 68;
	cout << input << endl;
	char gamma= 65+rand()%26;
	cout << gamma << endl;
	char output = input^gamma;
	cout << output << endl;
	output= output << 1;
	cout <<"Oops:"<<output << endl;

//Decrypter:
	output = output >> 1;
	cout << "\n"<<output << endl;
	char rez;
	rez = output^gamma;
	cout << rez;


	_getch();

	return 0;
}
